<!-- Content for the Add page-->
        <div class="container">
            <div class="row">
                <div class="offset-md-2 col-md-8">
                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Name</label>
                            <input type="text" class="form-control" id="nameTextField" placeholder="Enter Contact Name" name="name" required/>
                        </div>
                        <div class="form-group">
                            <label for="numberTextField">Number</label>
                            <input type="text" class="form-control" id="numberTextField" placeholder="Enter Contact number" name="number" required/>
                        </div>
                        <div class="form-group">
                            <label for="emailTextField">Email</label>
                            <input type="text" class="form-control" id="emailTextField" placeholder="Enter E-mail Address" name="email" required/>
                        </div>
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i> Submit</button>

                            <a href="/business-list" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>    
                    </form>
                </div>
            </div>
        </div>

